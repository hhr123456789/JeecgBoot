{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile-energy-module",
            "type": "shell",
            "command": "mvn",
            "args": [
                "compile",
                "-f",
                "jeecg-module-energy/pom.xml"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$maven-compiler-java"
        },
        {
            "label": "hot-deploy-compile",
            "type": "shell",
            "command": "mvn",
            "args": [
                "compile",
                "-f",
                "jeecg-module-energy/pom.xml",
                "-q"
            ],
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": "$maven-compiler-java"
        },
        {
            "label": "start-spring-boot-dev",
            "type": "shell",
            "command": "mvn",
            "args": [
                "spring-boot:run",
                "-f",
                "jeecg-module-system/jeecg-system-start/pom.xml",
                "-Dspring.profiles.active=dev",
                "-Dfile.encoding=UTF-8",
                "-Dconsole.encoding=UTF-8"
            ],
            "options": {
                "env": {
                    "JAVA_TOOL_OPTIONS": "-Dfile.encoding=UTF-8 -Dconsole.encoding=UTF-8"
                }
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Restarting.*$",
                    "endsPattern": "^.*Started.*Application.*$"
                }
            }
        }
    ]
}
