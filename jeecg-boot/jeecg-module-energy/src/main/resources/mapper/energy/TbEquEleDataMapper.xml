<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.energy.mapper.TbEquEleDataMapper">

    <!-- 根据仪表ID查询最新的电力实时数据 -->
    <select id="selectLatestDataByModuleId" resultType="org.jeecg.modules.energy.entity.TbEquEleData">
        SELECT * FROM tb_equ_ele_data
        WHERE Module_ID = #{moduleId}
        ORDER BY Equ_Electric_DT DESC
        LIMIT 1
    </select>

    <!-- 根据仪表ID查询唯一的电力实时数据记录（用于实时表更新） -->
    <select id="selectByModuleId" resultType="org.jeecg.modules.energy.entity.TbEquEleData">
        SELECT * FROM tb_equ_ele_data
        WHERE Module_ID = #{moduleId}
        LIMIT 1
    </select>

</mapper>